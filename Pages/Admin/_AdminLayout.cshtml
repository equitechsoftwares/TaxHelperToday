@using TaxHelperToday.Infrastructure.Data
@inject ApplicationDbContext DbContext
@{
    var settings = DbContext.AdminSettings.ToList();
    var siteName = settings.FirstOrDefault(s => s.Key == "site_name")?.Value ?? "TaxHelperToday";
    var siteLogoRaw = settings.FirstOrDefault(s => s.Key == "site_logo_url")?.Value ?? "~/img/logo.png";
    var siteLogoIsExternal = siteLogoRaw.StartsWith("http://", StringComparison.OrdinalIgnoreCase) ||
                             siteLogoRaw.StartsWith("https://", StringComparison.OrdinalIgnoreCase);

    string ResolveAssetUrl(string raw)
    {
        if (string.IsNullOrWhiteSpace(raw)) return Url.Content("~/img/logo.png");
        return raw.StartsWith("http://", StringComparison.OrdinalIgnoreCase) || raw.StartsWith("https://", StringComparison.OrdinalIgnoreCase)
            ? raw
            : Url.Content(raw);
    }

    var siteLogoUrl = ResolveAssetUrl(siteLogoRaw);

    var currentPath = (Context?.Request?.Path.Value ?? string.Empty).ToLowerInvariant().TrimEnd('/');

    bool IsActiveExact(string path)
    {
        var p = (path ?? string.Empty).ToLowerInvariant().TrimEnd('/');
        return !string.IsNullOrEmpty(p) && currentPath == p;
    }

    // Segment-aware match: "/admin/contact" matches "/admin/contact" and "/admin/contact/..." but NOT "/admin/contactsettings"
    bool IsActivePrefix(string prefix)
    {
        var p = (prefix ?? string.Empty).ToLowerInvariant().TrimEnd('/');
        return !string.IsNullOrEmpty(p) && (currentPath == p || currentPath.StartsWith(p + "/"));
    }

    var isDashboard = IsActiveExact("/admin/dashboard") || IsActiveExact("/admin");

    var isContent = IsActivePrefix("/admin/content");
    var isContentBlogs = IsActivePrefix("/admin/content/blogs");
    var isContentServices = IsActivePrefix("/admin/content/services");
    var isContentFaqs = IsActivePrefix("/admin/content/faqs");
    var isContentPages = IsActivePrefix("/admin/content/pages");

    var isContact = IsActivePrefix("/admin/contact");
    var isContactEnquiries = IsActivePrefix("/admin/contact/enquiries");
    var isContactMiniEnquiries = IsActivePrefix("/admin/contact/minienquiries");

    var isSettings = IsActivePrefix("/admin/settings") ||
                     IsActivePrefix("/admin/systemsettings") ||
                     IsActivePrefix("/admin/contactsettings") ||
                     IsActivePrefix("/admin/emailsettings") ||
                     IsActivePrefix("/admin/securitysettings");
    var isSettingsHome = IsActivePrefix("/admin/settings");
    var isSystemSettings = IsActivePrefix("/admin/systemsettings");
    var isContactSettings = IsActivePrefix("/admin/contactsettings");
    var isEmailSettings = IsActivePrefix("/admin/emailsettings");
    var isSecuritySettings = IsActivePrefix("/admin/securitysettings");

    var isProfile = IsActiveExact("/admin/profile");
    var isChangePassword = IsActiveExact("/admin/changepassword");
    var isLogout = IsActiveExact("/admin/logout");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - @siteName Admin</title>

    @if (siteLogoIsExternal)
    {
        <link rel="icon" type="image/png" href="@siteLogoUrl" />
        <link rel="shortcut icon" type="image/png" href="@siteLogoUrl" />
    }
    else
    {
        <link rel="icon" type="image/png" href="@siteLogoUrl" asp-append-version="true" />
        <link rel="shortcut icon" type="image/png" href="@siteLogoUrl" asp-append-version="true" />
    }

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-user"></i>
                        @User.Identity?.Name
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <a href="/Admin/Profile" class="dropdown-item">
                            <i class="fas fa-user mr-2"></i> Profile
                        </a>
                        <a href="/Admin/ChangePassword" class="dropdown-item">
                            <i class="fas fa-key mr-2"></i> Change Password
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="/Admin/Logout" class="dropdown-item">
                            <i class="fas fa-sign-out-alt mr-2"></i> Logout
                        </a>
                    </div>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/Admin/Dashboard" class="brand-link">
                <img src="@siteLogoUrl" alt="@siteName Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">@siteName</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="info">
                        <a href="#" class="d-block">@User.Identity?.Name</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/Admin/Dashboard" class="nav-link @(isDashboard ? "active" : "")">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview @(isContent ? "menu-open" : "")">
                            <a href="#" class="nav-link @(isContent ? "active" : "")">
                                <i class="nav-icon fas fa-file-alt"></i>
                                <p>
                                    Content
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Admin/Content/Blogs" class="nav-link @(isContentBlogs ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Blogs</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/Content/Services" class="nav-link @(isContentServices ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Services</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/Content/FAQs" class="nav-link @(isContentFaqs ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>FAQs</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/Content/Pages" class="nav-link @(isContentPages ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Pages</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview @(isContact ? "menu-open" : "")">
                            <a href="#" class="nav-link @(isContact ? "active" : "")">
                                <i class="nav-icon fas fa-envelope"></i>
                                <p>
                                    Contact
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Admin/Contact/Enquiries" class="nav-link @(isContactEnquiries ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Enquiries</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/Contact/MiniEnquiries" class="nav-link @(isContactMiniEnquiries ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Mini Enquiries</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        @* <li class="nav-item">
                            <a href="/Admin/Users/List" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Users</p>
                            </a>
                        </li> *@
                        <li class="nav-item has-treeview @(isSettings ? "menu-open" : "")">
                            <a href="#" class="nav-link @(isSettings ? "active" : "")">
                                <i class="nav-icon fas fa-cog"></i>
                                <p>
                                    Settings
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Admin/SystemSettings" class="nav-link @(isSystemSettings ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>System Settings</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/ContactSettings" class="nav-link @(isContactSettings ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Contact Settings</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/EmailSettings" class="nav-link @(isEmailSettings ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Email Settings</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/SecuritySettings" class="nav-link @(isSecuritySettings ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Security Settings</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Profile" class="nav-link @(isProfile ? "active" : "")">
                                <i class="nav-icon fas fa-user"></i>
                                <p>Profile</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/ChangePassword" class="nav-link @(isChangePassword ? "active" : "")">
                                <i class="nav-icon fas fa-key"></i>
                                <p>Change Password</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Logout" class="nav-link @(isLogout ? "active" : "")">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>Logout</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <strong>Copyright &copy; @DateTime.Now.Year @siteName.</strong>
            All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
