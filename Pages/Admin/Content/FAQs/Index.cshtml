@page
@model TaxHelperToday.Pages.Admin.Content.FAQs.IndexModel
@{
    ViewData["Title"] = "FAQs";
    Layout = "~/Pages/Admin/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap4.min.css">
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>FAQs</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Content</a></li>
                    <li class="breadcrumb-item active">FAQs</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">All FAQs</h3>
                        <div class="card-tools">
                            <a href="/Admin/Content/FAQs/Create" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> New FAQ
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="faqsTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Sln</th>
                                    <th>Question</th>
                                    <th>Category</th>
                                    <th>Display Order</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int sln = 1; }
                                @foreach (var faq in Model.Faqs)
                                {
                                    <tr>
                                        <td>@(sln++)</td>
                                        <td>@faq.Question</td>
                                        <td>@(faq.Category ?? "Uncategorized")</td>
                                        <td>@faq.DisplayOrder</td>
                                        <td>
                                            @if (faq.IsActive)
                                            {
                                                <span class="badge badge-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>@faq.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <a href="/Admin/Content/FAQs/Edit/@faq.Id" class="btn btn-sm btn-info" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" asp-page-handler="ToggleActive" asp-route-id="@faq.Id" class="d-inline">
                                                <button type="submit" class="btn btn-sm @(faq.IsActive ? "btn-warning" : "btn-success")" title="@(faq.IsActive ? "Deactivate" : "Activate")">
                                                    <i class="fas fa-@(faq.IsActive ? "eye-slash" : "eye")"></i>
                                                </button>
                                            </form>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@faq.Id" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this FAQ?');">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $("#faqsTable").DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "order": [[3, "asc"], [1, "asc"]], // Sort by Display Order, then Question (column indices updated due to Sln column)
                "columnDefs": [
                    { "orderable": false, "targets": [6] } // Disable sorting on Actions column
                ]
            });
        });
    </script>
}
