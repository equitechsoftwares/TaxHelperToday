@page
@model TaxHelperToday.Pages.Admin.Content.Services.IndexModel
@{
    ViewData["Title"] = "Services";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap4.min.css">
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Services</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Content</a></li>
                    <li class="breadcrumb-item active">Services</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">All Services</h3>
                        <div class="card-tools">
                            <a href="/Admin/Content/Services/Create" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> New Service
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="servicesTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Sln</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Level</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int sln = 1; }
                                @foreach (var service in Model.Services)
                                {
                                    <tr>
                                        <td>@(sln++)</td>
                                        <td>@service.Name</td>
                                        <td>@(service.Type ?? "-")</td>
                                        <td>@(service.Level ?? "-")</td>
                                        <td>
                                            @if (service.IsActive)
                                            {
                                                <span class="badge badge-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Admin/Content/Services/Edit/@service.Id" class="btn btn-sm btn-info" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" asp-page-handler="ToggleActive" asp-route-id="@service.Id" class="d-inline toggle-service-form">
                                                <button type="submit" class="btn btn-sm @(service.IsActive ? "btn-warning" : "btn-success")" title="@(service.IsActive ? "Deactivate" : "Activate")">
                                                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                                    <i class="fas fa-@(service.IsActive ? "toggle-off" : "toggle-on")"></i>
                                                </button>
                                            </form>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@service.Id" class="d-inline delete-service-form">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this service?');">
                                                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $("#servicesTable").DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "order": [], // no initial sort
                "columnDefs": [
                    { "orderable": false, "targets": [5] } // Disable sorting on Actions column
                ]
            });

            // Spinner for Delete and ToggleActive buttons
            $(document).on('submit', '.delete-service-form, .toggle-service-form', function() {
                const $form = $(this);
                const $button = $form.find('button[type="submit"]');
                const $spinner = $button.find('.spinner-border');
                const $icon = $button.find('i');
                
                $spinner.removeClass('d-none');
                $icon.addClass('d-none');
                $button.prop('disabled', true);
            });
        });
    </script>
}
