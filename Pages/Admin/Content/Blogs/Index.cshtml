@page
@model TaxHelperToday.Pages.Admin.Content.Blogs.IndexModel
@{
    ViewData["Title"] = "Blog Posts";
}

@section Styles {
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap4.min.css">
    <style>
        .btn-icon-square {
            width: 36px;
            height: 36px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
        }
    </style>
}

<!-- Content Header -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Blog Posts</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Content</a></li>
                    <li class="breadcrumb-item active">Blog Posts</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">All Blog Posts</h3>
                        <div class="card-tools">
                            <a href="/Admin/Content/Blogs/Create" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> New Blog Post
                            </a>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="blogsTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Sln</th>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Status</th>
                                    <th>Views</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int sln = 1; }
                                @foreach (var blog in Model.BlogPosts)
                                {
                                    <tr>
                                        <td>@(sln++)</td>
                                        <td>@blog.Title</td>
                                        <td>@(blog.Category ?? "Uncategorized")</td>
                                        <td>
                                            @if (blog.IsPublished)
                                            {
                                                <span class="badge badge-success">Published</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning">Draft</span>
                                            }
                                        </td>
                                        <td>@blog.ViewCount</td>
                                        <td>@blog.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <a href="/Admin/Content/Blogs/Edit/@blog.Id" class="btn btn-sm btn-info btn-icon-square" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@blog.Id" class="d-inline delete-blog-form">
                                                <button type="submit" class="btn btn-sm btn-danger btn-icon-square" title="Delete" onclick="return confirm('Are you sure you want to delete this blog post?');">
                                                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                            @if (blog.IsPublished)
                                            {
                                                <form method="post" asp-page-handler="Unpublish" asp-route-id="@blog.Id" class="d-inline publish-blog-form">
                                                    <button type="submit" class="btn btn-sm btn-warning btn-icon-square" title="Unpublish" onclick="return confirm('Unpublish this blog post? It will no longer be visible on the website.');">
                                                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                                        <i class="fas fa-toggle-off"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form method="post" asp-page-handler="Publish" asp-route-id="@blog.Id" class="d-inline publish-blog-form">
                                                    <button type="submit" class="btn btn-sm btn-success btn-icon-square" title="Publish" onclick="return confirm('Publish this blog post? It will become visible on the website.');">
                                                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                                        <i class="fas fa-toggle-on"></i>
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $("#blogsTable").DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "order": [[5, "desc"]], // Sort by Created date (index updated due to Sln column)
                "columnDefs": [
                    { "orderable": false, "targets": [6] } // Disable sorting on Actions column
                ]
            });

            // Spinner for Delete, Publish, and Unpublish buttons
            $(document).on('submit', '.delete-blog-form, .publish-blog-form', function() {
                const $form = $(this);
                const $button = $form.find('button[type="submit"]');
                const $spinner = $button.find('.spinner-border');
                const $icon = $button.find('i');
                
                $spinner.removeClass('d-none');
                $icon.addClass('d-none');
                $button.prop('disabled', true);
            });
        });
    </script>
}
