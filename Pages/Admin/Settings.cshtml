@page
@model TaxHelperToday.Pages.Admin.SettingsModel
@{
    ViewData["Title"] = "Settings";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Settings</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Settings</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-primary">
                    <div class="card-body">
                        <div class="text-center">
                            <i class="fas fa-address-book fa-3x mb-3 text-primary"></i>
                            <h4>Contact Settings</h4>
                            <p class="text-muted">Manage contact information, phone numbers, addresses, and map settings.</p>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a href="/Admin/ContactSettings" class="btn btn-primary">
                            <i class="fas fa-arrow-right"></i> Manage Contact Settings
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-info">
                    <div class="card-body">
                        <div class="text-center">
                            <i class="fas fa-envelope fa-3x mb-3 text-info"></i>
                            <h4>Email Settings</h4>
                            <p class="text-muted">Configure SMTP settings for sending emails and test email functionality.</p>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a href="/Admin/EmailSettings" class="btn btn-info">
                            <i class="fas fa-arrow-right"></i> Manage Email Settings
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-success">
                    <div class="card-body">
                        <div class="text-center">
                            <i class="fas fa-cog fa-3x mb-3 text-success"></i>
                            <h4>System Settings</h4>
                            <p class="text-muted">Configure site name, ITR deadline settings, and other system preferences.</p>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a href="/Admin/SystemSettings" class="btn btn-success">
                            <i class="fas fa-arrow-right"></i> Manage System Settings
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-danger">
                    <div class="card-body">
                        <div class="text-center">
                            <i class="fas fa-shield-alt fa-3x mb-3 text-danger"></i>
                            <h4>Security Settings</h4>
                            <p class="text-muted">Manage active sessions and security-related settings.</p>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a href="/Admin/SecuritySettings" class="btn btn-danger">
                            <i class="fas fa-arrow-right"></i> Manage Security Settings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
